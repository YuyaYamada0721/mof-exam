<p id="notice"><%= notice %></p>

<div class="property-container">
  <p>
    <strong>物件名:</strong>
    <%= @property.name %>
  </p>

  <p>
    <strong>賃料:</strong>
    <%= converting_to_jpy(@property.rent) %>
  </p>

  <p>
    <strong>住所:</strong>
    <%= @property.address %>
  </p>

  <p>
    <strong>築年数:</strong>
    <%= @property.age %>年
  </p>

  <p>
    <strong>備考:</strong>
    <%= @property.remarks %>
  </p>
</div>

  <% count = 1 %>
<% @nearest_stations.each do |nearest_station| %>
  <h2><%= "最寄り駅" + count.to_s %></h2>
  <% count = count + 1 %>
  <p>
    <strong>路線名：</strong>
    <%= nearest_station.route_name %><br>
  </p>
  <p>
    <strong>駅名：</strong>
    <%= nearest_station.name %><br>
  </p>
  <p>
    <strong>徒歩分数：</strong>
    <%= nearest_station.minutes_on_foot %><br>
  </p>
<% end %>

<br>
